<div id="albumMap"></div>

<script src="{{relative 'public/leaflet/leaflet/leaflet.js'}}"></script>
<script src="{{relative 'public/leaflet/cluster/leaflet.markercluster.js'}}"></script>
<script src="{{relative 'public/leaflet/photo/Leaflet.Photo.js'}}"></script>

<script>
  var openStreetMap = 'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png'
  var openStreetMapAttr = '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
  var map = L.map('albumMap').setView([51.505, -0.09], 13);
  L.tileLayer(openStreetMap, {attribution: openStreetMapAttr}).addTo(map);
  var photoLayer = L.photo.cluster({});
  var photos = {{{leaflet album}}};
  photoLayer.add(photos).addTo(map);
  map.fitBounds(photoLayer.getBounds());
</script>
